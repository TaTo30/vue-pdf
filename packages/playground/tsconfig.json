{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tato30/vue-pdf": [
        "../vue-pdf/src"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "env.d.ts",
    "main.ts",
    "App.vue"
  ]
}
